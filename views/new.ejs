<!DOCTYPE html>
<html lang="en">

<head>
  <title>RealEstate</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" type="text/css" />
  <link rel="stylesheet" href="/vendor/border-box.css" type="text/css" />
  <link rel="stylesheet" href="/styles/main.css" type="text/css" />
  <link rel="stylesheet" href="/styles/layout.css" type="text/css" />
  <link rel="stylesheet" href="/styles/header.css" type="text/css" />
  <link rel="stylesheet" href="/styles/login.css" type="text/css" />
  <link rel="stylesheet" href="/styles/footer.css" type="text/css" />
  <link rel="stylesheet" href="/styles/new.css" type="text/css" />

  <script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>
  <script type="text/javascript" src="/scripts/app.js"></script>

  <!--Icons from FontAwesome-->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.1.3/css/bootstrap.min.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/ionicons/2.0.1/css/ionicons.min.css">
</head>

  <body>
    <!-- Header section -->
    <%- include('partials/_header') %>
    <!-- Add new Ad section -->
    <main class="new-property">
      <h1 >Add new Property</h1>
      <form action="/add-property" method="POST" class="form">

        <div class="new-property-form__field-wrapper">
          <label for="new-property-form__title">Title</label>
          <input type="text" name="title" placeholder="Title" id="new-property-form__title">
        </div>

        <div class="form-wrapper">
          <label for="description">Description</label>
          <textarea placeholder="Put all information about the property here..." name="description" id="property-description" cols="30" rows="10" required></textarea>
        </div>

        <div class="form-wrapper">
          <label for="type">Type</label>
          <select id="type" name="type" required>
            <option value="house">House</option>
            <option value="apartment">Apartment</option>
            <option value="commercial">Commercial</option>
            <option value="condo">Condo</option>
          </select>
        </div>

        <div class="form-wrapper">
          <label for="price">Price</label>
          <input placeholder="Price" type="number" name="price" id="price" required>
        </div>

        <div class="featured-wrapper">
          <label for="price">Featured</label>
          <input type="radio" name="is_featured" value="true">
          <label for="featured">No</label>
          <input type="radio" name="is_featured" value="false" checked>
        </div>

        <div class="form-wrapper">
          <label for="thumbnail">Thumbnail Image</label>
          <input placeholder="Thumbnail Image" type="text" name="photo_1" id="thumbnail" required>
        </div>

        <div class="btn-wrapper">
            <button class="btn btn-dark" type="submit">Create</button>
            <a id="property-cancel" href="/"><i class="fas fa-ban"></i></a>
        </div>
      </form>
    </main>
    <!-- Footer section -->
    <%- include('partials/_footer') %>
  </body>
</html>
